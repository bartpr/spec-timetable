        getchar();
        return 0;
}
//---------------------------------------------------------------------------






bool WinsockInit()
{
  WSADATA WSAData;
  if (WSAStartup(MAKEWORD(2,2),&WSAData) != 0)
  {
      return FALSE;
  }
  else
  {
      return TRUE;
  }
}